# ===========================================
# VONIX NETWORK - ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Database Type: turso, postgres, mysql, or mariadb
DATABASE_TYPE=turso

# === TURSO DATABASE (Default) ===
# Turso Database URL (get from turso.tech)
TURSO_DATABASE_URL=

# Turso Auth Token (get from turso.tech)
TURSO_AUTH_TOKEN=

# === POSTGRESQL DATABASE (Alternative) ===
# Full connection URL (alternative to individual settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# Or use individual settings:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=vonix
# DB_USER=postgres
# DB_PASSWORD=your-postgres-password
# DB_SSL=false
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# === MYSQL/MARIADB DATABASE (Alternative) ===
# Full connection URL (alternative to individual settings)
# DATABASE_URL=mysql://user:password@host:port/database

# Or use individual settings:
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=vonix
# DB_USER=root
# DB_PASSWORD=your-mysql-password
# DB_SSL=false
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# ===========================================
# AUTHENTICATION CONFIGURATION
# ===========================================
# NextAuth.js Secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# NextAuth.js URL (change for production)
NEXTAUTH_URL=http://localhost:3000

# ===========================================
# DISCORD INTEGRATION
# ===========================================
# Discord Application ID
DISCORD_CLIENT_ID=your-discord-client-id

# Discord Application Secret
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Discord Bot Token
DISCORD_BOT_TOKEN=your-discord-bot-token

# Discord Server ID (for bot commands)
DISCORD_GUILD_ID=your-discord-server-id

# ===========================================
# MINECRAFT INTEGRATION
# ===========================================
# API Key for Minecraft server integration
MINECRAFT_API_KEY=your-minecraft-api-key

# ===========================================
# PAYMENT PROCESSING (OPTIONAL)
# ===========================================
# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# ===========================================
# EMAIL CONFIGURATION (OPTIONAL)
# ===========================================
# SMTP Configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# REDIS CONFIGURATION (OPTIONAL)
# ===========================================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379

# ===========================================
# FILE STORAGE (OPTIONAL)
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_SECRET_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ===========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ===========================================
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================
# Node Environment
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Port for development server
PORT=3000

# ===========================================
# PRODUCTION CONFIGURATION
# ===========================================
# Production URL (change for your domain)
PRODUCTION_URL=https://your-domain.com

# Enable compression
ENABLE_COMPRESSION=true

# Enable security headers
ENABLE_SECURITY_HEADERS=true

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features
ENABLE_DISCORD_BOT=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_FORUM=true
ENABLE_DONATIONS=true
ENABLE_ANALYTICS=false

# ===========================================
# RATE LIMITING
# ===========================================
# API rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ===========================================
# SECURITY
# ===========================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Trusted proxies
TRUSTED_PROXIES=127.0.0.1,::1

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

