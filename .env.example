# NextAuth Configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here

# Auth URL - Primary domain
AUTH_URL=http://localhost:3000
# Alternative: AUTH_URL=https://vonix.network

# Trust all hosts (required for multiple domains)
AUTH_TRUST_HOST=true

# Database
DATABASE_URL=file:./data/vonix.db

# Optional: Discord Integration
DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_GUILD_ID=

# Optional: Email Configuration
EMAIL_SERVER=
EMAIL_FROM=

# Node Environment
NODE_ENV=production

# Square Payments Integration (Optional)
# Set to 'true' to enable Square payments, 'false' or leave empty to disable
SQUARE_INTEGRATION_ENABLED=false

# Square API Credentials (only needed if SQUARE_INTEGRATION_ENABLED=true)
# Get these from: https://developer.squareup.com/apps
SQUARE_ACCESS_TOKEN=
SQUARE_LOCATION_ID=
SQUARE_APPLICATION_ID=

# Square Environment: 'sandbox' or 'production'
SQUARE_ENVIRONMENT=sandbox
