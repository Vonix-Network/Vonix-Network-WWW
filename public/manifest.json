      "form_factor": "wide",
      "label": "Vonix Network Home Page"
    },
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Vonix Network Dashboard"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Go to your dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Social Feed",
      "short_name": "Social",
      "description": "View social posts",
      "url": "/social",
      "icons": [
        {
          "src": "/icons/shortcut-social.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Forum",
      "short_name": "Forum",
      "description": "Browse community forum",
      "url": "/forum",
      "icons": [
        {
          "src": "/icons/shortcut-forum.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Servers",
      "short_name": "Servers",
      "description": "View server status",
      "url": "/servers",
      "icons": [
        {
          "src": "/icons/shortcut-servers.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/social/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "video/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "minecraft",
      "url": "/servers/connect?server=%s"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  }
}
